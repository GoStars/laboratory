extends layout

block content
  h1.page-header #{title}
  form(method='POST' action='/homepage/edit/' + home._id)
    #form-group
      label Автор:
      input.form-control(name='author' type='text' value=home.author)
    #form-group
      label Тіло:
      textarea.form-control(name='body' id='editor')= home.body
    br
    input.btn.btn-primary(type='submit' value='Відправити')
