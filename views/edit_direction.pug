extends layout

block content
  h1.page-header #{title}
  form(method='POST' action='/directions/edit/' + direction._id)
    #form-group
      label Заголовок:
      input.form-control(name='title' type='text' value=direction.title)
    #form-group
      label Автор:
      input.form-control(name='author' type='text' value=direction.author)
    #form-group
      label Тіло:
      textarea.form-control(name='body' id='editor')= direction.body
    br
    input.btn.btn-primary(type='submit' value='Відправити')
